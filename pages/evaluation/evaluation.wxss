/* pages/evaluation/evaluation.wxss */
.tabs-scroll{
  width: 100%;
  white-space: nowrap; /* 禁止换行 */
  padding: 0;
}

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 评价要素标签 - 完全贴合顶部 */
.tabs {
  display: flex;
  background: white;
  padding: 0;
  margin: 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 25rpx 10rpx;
  border-bottom: 3rpx solid transparent;
  justify-content: space-around; /* 均匀分布 */
  white-space: nowrap; /* 禁止文字换行 */
}

.tab-text {
  margin: 10rpx 20rpx;
}

.tab.active {
  color: #8B5FBF;
  font-weight: bold;
  border-bottom-color: #8B5FBF;
}

/* 内容区域 - 紧贴评价要素 */
.content {
  height: calc(100vh - 80rpx);
  padding: 0;
  margin: 0;
  overflow-y: auto;
}

/* 评价项 - 完全贴合 */
.evaluation-item {
  background: white;
  padding: 30rpx;
  margin: 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-header {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 25rpx;
}

.info-icon {
  color: #8B5FBF;
}

/* 评分区域 */
.scoring-area {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.score-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.score-controls {
  display: flex;
  width:480rpx;
  align-items: center;
  gap: 15rpx;
}

.score-btn {
  width: 50rpx;
  height: 70rpx;
  border: 2rpx solid;
  background: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.score-btn.minus {
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.score-btn.plus {
  border-color: #8B5FBF;
  color: #8B5FBF;
}

.score-input {
  width: 380rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.score-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 选择器样式 */
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 480rpx;
  height: 70rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background: white;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-text:empty::before {
  content: '请选择';
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #8B5FBF;
  margin-left: 10rpx;
}

.upload-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.desc-wrapper {
  background: #f9f9fb;
  border: 1rpx solid #e5e5ef;
  border-radius: 12rpx;
  padding: 10rpx;
}

.desc-input {
  min-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  width: 100%;
}

.file-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.file-btn {
  background: #8B5FBF;
  color: #fff;
  border: none;
  padding: 10rpx 26rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.file-name {
  font-size: 26rpx;
  color: #555;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-btn {
  background: transparent;
  color: #ff4d4f;
  border: none;
  font-size: 24rpx;
  padding: 0;
}

.status-row {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.status-tag.pending {
  color: #b37feb;
  background: #f9f0ff;
}

.status-tag.uploading {
  color: #1890ff;
  background: #e6f7ff;
}

.status-tag.success {
  color: #52c41a;
  background: #f6ffed;
}

.status-tag.error {
  color: #ff4d4f;
  background: #fff1f0;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
  padding-bottom: 45px;
  z-index:9999;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn {
  background: #52c41a;
  color: white;
  border: none;
}

.audit-btn {
  background: #1a94c4;
  color: white;
  border: none;
}

.back-btn {
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
}