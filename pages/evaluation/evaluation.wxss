/* pages/evaluation/evaluation.wxss */
.drawer-layout{
  position: relative;
  min-height: 100vh;
  background: #f5f5f5;
  overflow-x: hidden;
}

.drawer-panel{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 520rpx;
  background: #fff;
  box-shadow: 10rpx 0 30rpx rgba(0,0,0,0.15);
  z-index: 2000;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.drawer-panel.open{
  transform: translateX(0);
}

.drawer-header{
  padding: 40rpx 36rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}

.drawer-title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.drawer-close{
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #60A5FA;
  background: rgba(96,165,250,0.12);
  border-radius: 999rpx;
  border: none;
  line-height: 1;
}

.drawer-scroll{
  flex: 1;
}

.drawer-tabs{
  padding-bottom: 120rpx;
}

.drawer-tab{
  padding: 28rpx 36rpx;
  border-left: 6rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}

.drawer-tab.active{
  background: rgba(96,165,250,0.12);
  border-left-color: #60A5FA;
  color: #60A5FA;
  font-weight: 600;
}

.drawer-tab__text{
  flex: 1;
  margin-right: 20rpx;
}

.drawer-tab__score{
  font-size: 24rpx;
  color: #333;
}

.drawer-overlay{
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.35);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 1500;
}

.drawer-overlay.visible{
  opacity: 1;
  pointer-events: auto;
}

.main-content{
  padding: 20rpx 30rpx 220rpx;
  transition: transform 0.3s ease;
  min-height: 100vh;
}

.main-content.shifted{
  transform: translateX(120rpx);
}

.drawer-trigger{
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 26rpx;
  border-radius: 999rpx;
  background: #fff;
  box-shadow: 0 6rpx 18rpx rgba(96,165,250,0.25);
  margin: 10rpx 0 20rpx;
}

.trigger-icon{
  font-size: 32rpx;
  color: #60A5FA;
  letter-spacing: 4rpx;
}

.trigger-text{
  font-size: 28rpx;
  color: #333;
}

.tabs-scroll{
  width: 100%;
  white-space: nowrap; /* 禁止换行 */
  padding: 0;
}

.current-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-text{
  font-size: 26rpx;
  color: #333;
}

.score-banner{
  margin: 20rpx 30rpx 0;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3D8BF7 100%);
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 28rpx rgba(96,165,250,0.35);
  color: #fff;
}

.score-banner__track{
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 100%;
}

.score-banner__label{
  font-size: 28rpx;
  opacity: 0.85;
}

.score-banner__value{
  font-size: 48rpx;
  font-weight: 600;
}

/* 最终得分横幅 */
.final-score-banner{
  margin: 20rpx 30rpx 0;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 28rpx rgba(82, 196, 26, 0.35);
  color: #fff;
}

.final-score-banner__track{
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 100%;
}

.final-score-banner__label{
  font-size: 28rpx;
  opacity: 0.85;
}

.final-score-banner__value{
  font-size: 48rpx;
  font-weight: 600;
}

/* 内容区域包装器 */
.content-wrapper{
  position: relative;
}

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 评价要素标签 - 完全贴合顶部 */
.tabs {
  display: flex;
  background: white;
  padding: 0;
  margin: 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 25rpx 10rpx;
  border-bottom: 3rpx solid transparent;
  justify-content: space-around; /* 均匀分布 */
  white-space: nowrap; /* 禁止文字换行 */
}

.tab-text {
  margin: 10rpx 20rpx;
}

.tab.active {
  color: #60A5FA;
  font-weight: bold;
  border-bottom-color: #60A5FA;
}

/* 内容区域 - 紧贴评价要素 */
.content {
  height: calc(100vh - 80rpx);
  padding: 0;
  margin: 0;
  overflow-y: auto;
}

/* 评价项 - 完全贴合 */
.evaluation-item {
  background: white;
  padding: 30rpx;
  margin: 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-header {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.item-score{
  margin-top: 0;
  font-size: 24rpx;
  color: #999;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 25rpx;
}

.info-icon {
  color: #60A5FA;
}

/* 评分区域 */
.scoring-area {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.score-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.score-controls {
  display: flex;
  width:480rpx;
  align-items: center;
  gap: 15rpx;
}
.scoring-area-rad {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 25rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.score-label-rad {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  min-width: 140rpx;
}

.radio-controls-rad {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
  justify-content: space-between;
}

.radio-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 10rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  min-height: 80rpx;
}

.radio-option:active {
  transform: scale(0.98);
}

.radio-option.selected {
  border-color: #60A5FA;
  background: rgba(96, 165, 250, 0.12);
  box-shadow: 0 2rpx 8rpx rgba(96, 165, 250, 0.2);
}

.radio-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 5rpx;
}

.radio-desc {
  font-size: 20rpx;
  color: #999;
}

.radio-option.selected .radio-text {
  color: #60A5FA;
}

.radio-option.selected .radio-desc {
  color: #60A5FA;
}

.radio-option.disabled {
  opacity: 0.5;
  pointer-events: none;
  cursor: not-allowed;
}

.file-btn.disabled {
  background: #d9d9d9 !important;
  color: #999 !important;
  opacity: 0.6;
  pointer-events: none;
}

/* 不同等级的颜色区分 */
.radio-option[data-level="A"].selected {
  border-color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.radio-option[data-level="A"].selected .radio-text,
.radio-option[data-level="A"].selected .radio-desc {
  color: #52c41a;
}

.radio-option[data-level="B"].selected {
  border-color: #3B82F6;
  background: rgba(59, 130, 246, 0.12);
}

.radio-option[data-level="B"].selected .radio-text,
.radio-option[data-level="B"].selected .radio-desc {
  color: #3B82F6;
}

.radio-option[data-level="C"].selected {
  border-color: #faad14;
  background: rgba(250, 173, 20, 0.1);
}

.radio-option[data-level="C"].selected .radio-text,
.radio-option[data-level="C"].selected .radio-desc {
  color: #faad14;
}

.radio-option[data-level="D"].selected {
  border-color: #FB7185;
  background: rgba(251, 113, 133, 0.12);
}

.radio-option[data-level="D"].selected .radio-text,
.radio-option[data-level="D"].selected .radio-desc {
  color: #FB7185;
}
.score-btn {
  width: 50rpx;
  height: 70rpx;
  border: 2rpx solid;
  background: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.score-btn.minus {
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.score-btn.plus {
  border-color: #60A5FA;
  color: #60A5FA;
}

.score-btn.disabled {
  border-color: #d9d9d9;
  color: #d9d9d9;
  background: #f5f5f5;
  opacity: 0.6;
}

.score-input {
  width: 380rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.score-input[disabled] {
  background: #f5f5f5;
  color: #999;
  opacity: 0.6;
}

.score-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 选择器样式 */
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 480rpx;
  height: 70rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background: white;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-text:empty::before {
  content: '请选择';
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #60A5FA;
  margin-left: 10rpx;
}

.upload-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.desc-wrapper {
  background: #f9f9fb;
  border: 1rpx solid #e5e5ef;
  border-radius: 12rpx;
  padding: 10rpx;
}

.desc-input {
  min-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  width: 100%;
}

.file-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.file-limit{
  font-size: 24rpx;
  color: #999;
}

.files-list{
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: 180rpx; /* 大约一个文件项的高度，用户可通过滚动查看其他文件 */
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; /* iOS 平滑滚动 */
}

.file-entry{
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.file-entry__meta{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  flex-wrap: wrap;
}

.file-actions{
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-left: auto;
}

.action-btn{
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  line-height: 1.2;
  transition: all 0.3s ease;
}

.preview-btn{
  background: #60A5FA;
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(96,165,250,0.2);
}

.preview-btn:active{
  background: #3D8BF7;
  transform: scale(0.95);
}

.delete-btn{
  background: #ff4d4f;
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(255,77,79,0.2);
}

.delete-btn:active{
  background: #ff7875;
  transform: scale(0.95);
}

.delete-btn.restore {
  background: #10B981;
  color: white;
}

.delete-btn.restore:active {
  background: #059669;
}

.file-btn {
  background: #60A5FA;
  color: #fff;
  border: none;
  padding: 10rpx 26rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  box-shadow: 0 8rpx 16rpx rgba(96,165,250,0.3);
}

.file-btn.camera-btn {
  background: #52c41a;
  box-shadow: 0 8rpx 16rpx rgba(82,196,26,0.3);
}

.file-name {
  font-size: 26rpx;
  color: #555;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-btn {
  background: transparent;
  color: #ff4d4f;
  border: none;
  font-size: 24rpx;
  padding: 0;
}

/* 兼容旧样式，如果其他地方还在使用 */
.file-entry__meta .link-btn{
  font-size: 24rpx;
}

.status-row {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.status-tag.pending {
  color: #b37feb;
  background: #f9f0ff;
}

.status-tag.uploading {
  color: #1890ff;
  background: #e6f7ff;
}

.status-tag.success {
  color: #52c41a;
  background: #f6ffed;
}

.status-tag.error {
  color: #ff4d4f;
  background: #fff1f0;
}

.status-tag.deleted {
  background: #FEF3C7;
  color: #D97706;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
  padding-bottom: 45px;
  z-index:9999;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn {
  background: #52c41a;
  color: white;
  border: none;
}

.audit-btn {
  background: #1a94c4;
  color: white;
  border: none;
}

.back-btn {
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
}

.cancel-audit-btn {
  background: #ff4d4f;
  color: white;
  border: none;
}

.btn.disabled {
  background: #d9d9d9 !important;
  color: #999 !important;
  opacity: 0.6;
}

.btn.disabled {
  background: #d9d9d9 !important;
  color: #999 !important;
  opacity: 0.6;
  border: none !important;
}