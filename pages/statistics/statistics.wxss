/* pages/statistics/statistics.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E0F2FF 0%, #60A5FA 45%, #3B82F6 100%);
  padding: 20rpx;
}

/* 统一卡片背景色 - 半透明白色 */
.stats-overview,
.charts-section,
.ranking-section,
.analysis-section,
.completion-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  width: 85vw;
}

/* 顶部统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.overview-card {
  flex: 1;
  text-align: center;
  margin: 0 10rpx;
  padding: 25rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 1rpx solid rgba(96, 165, 250, 0.2);
  box-shadow: 0 8rpx 20rpx rgba(96, 165, 250, 0.18);
}

.overview-value {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #60A5FA;
  margin-bottom: 10rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

.overview-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.trend {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
  font-weight: 500;
}

.trend.up {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.trend.down {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

/* 图表区域 */
.charts-section {
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-text {
  font-size: 26rpx;
  color: #0F63C8;
  padding: 10rpx 20rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.5);
  border-radius: 20rpx;
  background: rgba(96, 165, 250, 0.1);
}

.chart-container {
  height: 300rpx;
}

.bar-chart {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 100%;
  padding: 20rpx 0;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  height: 200rpx;
  width: 40rpx;
  background: rgba(240, 242, 245, 0.8);
  border-radius: 20rpx;
  position: relative;
  margin-bottom: 15rpx;
}

.bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, #60A5FA, #3D8BF7);
  border-radius: 20rpx;
  transition: height 0.5s ease;
}

.bar-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.bar-value {
  font-size: 20rpx;
  color: #999;
}

/* 教师排名 */
.ranking-section {
  padding: 30rpx;
}

.more-link {
  font-size: 26rpx;
  color: #3B82F6;
  font-weight: 500;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 10rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.15);
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(96, 165, 250, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #0F63C8;
  margin-right: 20rpx;
}

.rank-number.top-1 {
  background: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.rank-number.top-2 {
  background: rgba(191, 191, 191, 0.1);
  color: #bfbfbf;
}

.rank-number.top-3 {
  background: rgba(245, 159, 11, 0.1);
  color: #f59e0b;
}

.teacher-info {
  flex: 1;
}

.teacher-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.teacher-department {
  font-size: 22rpx;
  color: #666;
}

.score-info {
  text-align: right;
}

.score {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #60A5FA;
  margin-bottom: 5rpx;
}

.score-change {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.score-change.up {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.score-change.down {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

/* 考核项目分析 */
.analysis-section,
.completion-section {
  padding: 30rpx;
}

.completion-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.completion-card {
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  background: rgba(248, 250, 252, 0.9);
  border: 1rpx solid rgba(96, 165, 250, 0.15);
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.completion-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.completion-label {
  font-size: 24rpx;
  color: #666;
}

.completion-card.total .completion-value {
  color: #60A5FA;
}

.completion-card.pending .completion-value {
  color: #fa8c16;
}

.completion-card.in-progress .completion-value {
  color: #1890ff;
}

.completion-card.completed .completion-value {
  color: #52c41a;
}

.analysis-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.analysis-item {
  padding: 20rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 10rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.15);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-score {
  font-size: 26rpx;
  color: #60A5FA;
  font-weight: bold;
}

.progress-bar {
  height: 8rpx;
  background: rgba(240, 240, 240, 0.8);
  border-radius: 4rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: linear-gradient(to right, #60A5FA, #3D8BF7);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-label {
  font-size: 22rpx;
  color: #666;
}

.item-trend {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.item-trend.up {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.item-trend.down {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}