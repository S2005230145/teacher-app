/* pages/assessment/assessment.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx 30rpx 0;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 0 40rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3D8BF7 100%);
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.logout-btn {
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 数据概览 */
.overview {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: -30rpx;
  box-shadow: 0 12rpx 32rpx rgba(96, 165, 250, 0.18);
  position: sticky;
  top: 0;
  z-index: 10;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #60A5FA;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 考核列表 */
.assessment-list {
  margin-top: 40rpx;
}

.ethics-item {
  margin-bottom: 30rpx;
}

.ethics-score {
  min-width: 100rpx;
  text-align: center;
}

.ethics-score--excellent {
  background: #e8fef8;
  color: #00BFA5;
}

.ethics-score--good {
  background: #e3f2fd;
  color: #2196F3;
}

.ethics-score--poor {
  background: #ffe8e6;
  color: #E53935;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.assessment-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.lock-icon {
  font-size: 26rpx;
  color: #FF9800;
  margin-left: 8rpx;
}

.item-score {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  display: flex;          /* 让容器成为 flex */
  align-items: center;    /* 垂直居中 */
  justify-content: center;/* 水平居中 */
  min-width: 120rpx;
  text-align: center;
}

.item-score.excellent { background: #e8fef8; color: #00BFA5; } /* 冷青绿色 */
.item-score.good { background: #e3f2fd; color: #2196F3; } /* 蓝色 */
.item-score.average { background: #e8eaf6; color: #3F51B5; } /* 冷紫色 */

.item-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.item-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #60A5FA, #3D8BF7);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-status {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
}

.item-status.completed { background: #e8fef8; color: #00BFA5; } /* 冷青绿色 */
.item-status.in-progress { background: #e3f2fd; color: #2196F3; } /* 蓝色 */
.item-status.pending { background: #e8eaf6; color: #3F51B5; } /* 冷紫色 */

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 40rpx 0;
}

.menu-item {
  background: white;
  border-radius: 15rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
  transition: transform 0.3s;
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}