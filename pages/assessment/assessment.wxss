/* pages/assessment/assessment.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx 30rpx 0;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 0 40rpx;
  background: linear-gradient(135deg, #8B5FBF 0%, #6A3093 100%);
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.logout-btn {
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 数据概览 */
.overview {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: -30rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 95, 191, 0.1);
  position: sticky;
  top: 0;
  z-index: 10;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B5FBF;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 考核列表 */
.assessment-list {
  margin-top: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.assessment-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-score {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
}

.item-score.excellent { background: #e8f5e8; color: #4CAF50; }
.item-score.good { background: #e3f2fd; color: #2196F3; }
.item-score.average { background: #fff3e0; color: #FF9800; }

.item-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.item-progress {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8B5FBF, #6A3093);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-status {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
}

.item-status.completed { background: #e8f5e8; color: #4CAF50; }
.item-status.in-progress { background: #e3f2fd; color: #2196F3; }
.item-status.pending { background: #fff3e0; color: #FF9800; }

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 40rpx 0;
}

.menu-item {
  background: white;
  border-radius: 15rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
  transition: transform 0.3s;
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}