/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 120rpx;
}

/* 功能按钮区域 */
.function-section {
  margin-bottom: 40rpx;
}

.function-buttons {
  display: flex;
  justify-content: space-between;
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.1);
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  transition: all 0.3s ease;
}

.function-item:active {
  transform: scale(0.95);
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 45rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 15rpx rgba(0,0,0,0.1);
}

.add-icon {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
}

.data-icon {
  background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
}

.profile-icon {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.function-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
  text-align: center;
}

/* 数据概览 */
.data-section {
  background: white;
  border-radius: 25rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.data-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.data-card {
  background: #f8fafc;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  border-left: 6rpx solid;
}

.data-card:active {
  transform: translateY(-2rpx);
  background: #f1f5f9;
}

.card-1 {
  border-left-color: #10b981;
}

.card-2 {
  border-left-color: #3b82f6;
}

.card-3 {
  border-left-color: #f59e0b;
}

.card-content {
  display: flex;
  align-items: center;
}

.data-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.card-1 .data-value { color: #10b981; }
.card-2 .data-value { color: #3b82f6; }
.card-3 .data-value { color: #f59e0b; }

.data-label {
  font-size: 28rpx;
  color: #6b7280;
}

.trend {
  color: #10b981;
  font-size: 28rpx;
  font-weight: bold;
  background: #ecfdf5;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}
