/* pages/kpi/kpi.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  padding: 20rpx;
}

/* 顶部搜索和筛选 */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.search-box {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-btn {
  font-size: 26rpx;
  color: #a1c4fd;
  padding: 10rpx 20rpx;
  background: rgba(139, 95, 191, 0.1);
  border-radius: 20rpx;
  margin-left: 15rpx;
}

.filter-panel {
  padding: 25rpx;
}

.filter-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 25rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  width: 140rpx;
  margin-right: 20rpx;
}

.filter-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-tag {
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background: #a1c4fd;
  color: white;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 25rpx;
  text-align: center;
  margin: 0 5rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #a1c4fd;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* KPI列表 */
.kpi-list {
  height: calc(100vh - 300rpx);
}

.kpi-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.kpi-items {
  padding: 0;
}

.kpi-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.kpi-item:active {
  background: rgba(139, 95, 191, 0.05);
}

.kpi-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-badge {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.item-badge.teaching {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.item-badge.research {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.item-badge.service {
  background: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.item-status {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.item-status.active {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.item-status.completed {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.item-status.pending {
  background: rgba(245, 245, 245, 0.1);
  color: #999;
}

.kpi-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.kpi-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.kpi-metrics {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
}

.metric {
  text-align: center;
  flex: 1;
}

.metric-label {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.metric-value {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.metric-value.achieved {
  color: #52c41a;
}

.metric-value.not-achieved {
  color: #ff4d4f;
}

.progress-section {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
}

.progress-percent {
  font-size: 26rpx;
  font-weight: bold;
  color: #1890ff;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #60A5FA, #3B82F6);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.score-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.score-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.score-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B5FBF;
  margin-right: 5rpx;
}

.score-max {
  font-size: 22rpx;
  color: #999;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.deadline {
  font-size: 22rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.btn-detail, .btn-record {
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  border: none;
}

.btn-detail {
  background: rgba(139, 95, 191, 0.1);
  color: #8B5FBF;
}

.btn-record {
  background: #8B5FBF;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  background: #8B5FBF;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
}

/* 悬浮按钮 */
.floating-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
}

.fab-add {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #8B5FBF;
  color: white;
  font-size: 40rpx;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(139, 95, 191, 0.3);
}