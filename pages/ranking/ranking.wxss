/* pages/ranking/ranking.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 筛选区域 */
.filter-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.filter-controls {
  display: flex;
  gap: 20rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #8B5FBF;
  padding: 12rpx 20rpx;
  background: rgba(139, 95, 191, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 95, 191, 0.2);
}

/* 前三名展示 */
.top-three {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.top-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  min-width: 200rpx;
}

.top-1 {
  order: 2;
  background: linear-gradient(135deg, #fff9e6, #fff2cc);
  transform: scale(1.1);
  margin: 0 10rpx;
}

.top-2 {
  order: 1;
  background: linear-gradient(135deg, #f0f0f0, #e6e6e6);
}

.top-3 {
  order: 3;
  background: linear-gradient(135deg, #fff2e8, #ffe6d6);
}

.top-rank {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.top-1 .top-rank {
  color: #faad14;
}

.top-2 .top-rank {
  color: #666;
}

.top-3 .top-rank {
  color: #fa541c;
}

.top-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B5FBF, #6A4FCF);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 40rpx;
  color: white;
}

.top-info {
  text-align: center;
  margin-bottom: 15rpx;
}

.top-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.top-department {
  font-size: 22rpx;
  color: #666;
}

.top-score {
  text-align: center;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B5FBF;
}

.score-label {
  font-size: 22rpx;
  color: #999;
}

/* 排名列表 */
.ranking-list {
  height: calc(100vh - 10rpx);
  margin-bottom: 150rpx;
}

.ranking-items {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
}

.rank-number.top-1 {
  background: #fff7e6;
  color: #faad14;
}

.rank-number.top-2 {
  background: #f0f0f0;
  color: #666;
}

.rank-number.top-3 {
  background: #fff2e8;
  color: #fa541c;
}

.teacher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B5FBF, #6A4FCF);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.teacher-avatar.current {
  border: 3rpx solid #8B5FBF;
}

.teacher-info {
  flex: 1;
}

.teacher-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.teacher-department {
  font-size: 22rpx;
  color: #666;
}

.score-info {
  text-align: right;
  margin-right: 15rpx;
}

.score {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #8B5FBF;
  margin-bottom: 5rpx;
}

.trend {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.trend.up {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.trend.down {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.medal {
  margin-left: 10rpx;
}

.medal-icon {
  font-size: 28rpx;
}

/* 当前用户 */
.current-user-section {
  margin-bottom: 100rpx;
}

.section-divider {
  text-align: center;
  margin: 30rpx 0 20rpx;
}

.divider-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.current-user-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  border-left: 6rpx solid #8B5FBF;
}

/* 底部统计 */
.stats-footer {
  position: fixed;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx 15rpx 0 0;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 -4rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #8B5FBF;
  margin-bottom: 5rpx;
}

.stats-label {
  font-size: 22rpx;
  color: #666;
}