/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E0F2FF 0%, #60A5FA 45%, #3B82F6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 动态背景气泡 */
.bubbles {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.bubble {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s infinite ease-in-out;
}

.bubble-1 {
  width: 120rpx;
  height: 120rpx;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.bubble-2 {
  width: 80rpx;
  height: 80rpx;
  top: 60%;
  left: 80%;
  animation-delay: 2s;
}

.bubble-3 {
  width: 60rpx;
  height: 60rpx;
  top: 80%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-20rpx) scale(1.05); }
}

/* 玻璃拟态卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 30rpx;
  padding: 60rpx 50rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #60A5FA, #3D8BF7);
  border-radius: 50%;
  filter: drop-shadow(0 10rpx 20rpx rgba(96, 165, 250, 0.4));
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, rgba(96,165,250,0.4), rgba(61,139,247,0.25));
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
  opacity: 0.2;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.1; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 0.15; transform: translate(-50%, -50%) scale(1.1); }
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.app-subtitle {
  font-size: 24rpx;
  color: #999;
  letter-spacing: 2rpx;
}

/* 输入框组 */
.input-group {
  position: relative;
  margin-bottom: 50rpx;
  border-radius: 15rpx;
  background: rgba(248, 249, 252, 0.8);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.input-focused {
  background: rgba(255, 255, 255, 1);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(96, 165, 250, 0.25);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  background: transparent;
}

.placeholder {
  color: #ccc;
}

.input-line {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #60A5FA, transparent);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.input-focused .input-line {
  transform: scaleX(1);
}

.campus-selector {
  cursor: pointer;
}

.campus-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.campus-placeholder {
  color: #bbb;
}

.arrow-icon {
  font-size: 28rpx;
  color: #bbb;
  margin-left: 20rpx;
}

.eye-icon {
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  cursor: pointer;
}

.eye-text {
  font-size: 26rpx;
  color: #60A5FA;
  white-space: nowrap;
}


/* 自动登录提示 */
.auto-login-tip {
  background: rgba(96, 165, 250, 0.12);
  border: 1rpx solid rgba(96, 165, 250, 0.3);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  animation: fadeIn 0.5s ease;
}

.tip-text {
  font-size: 26rpx;
  color: #0F63C8;
}

/* 错误提示 */
.error-message {
  background: rgba(255, 59, 48, 0.1);
  border: 1rpx solid rgba(255, 59, 48, 0.3);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  animation: shake 0.5s ease;
}

.error-text {
  font-size: 26rpx;
  color: #ff3b30;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

/* 登录按钮 */

.login-btn.active {
  background: linear-gradient(135deg, #60A5FA, #3B82F6);
  box-shadow: 0 15rpx 40rpx rgba(96, 165, 250, 0.4);
}

.login-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 20rpx rgba(96, 165, 250, 0.3);
}

.btn-text {
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  position: relative;
  z-index: 2;
}

.btn-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s ease;
}

.login-btn.active:active .btn-glow {
  left: 100%;
}

.btn-loading {
  display: none;
}

.login-btn.loading .btn-loading {
  display: block;
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid transparent;
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

/* 底部链接 */
.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.footer-link {
  font-size: 26rpx;
  color: #999;
  padding: 0 20rpx;
}

.footer-divider {
  color: #ddd;
}

.footer-link:active {
  color: #3B82F6;
}

/* 版本信息 */
.version {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录按钮禁用状态 */
.login-btn:disabled {
  opacity: 0.6;
  transform: none !important;
  box-shadow: none !important;
}

/* 紫色主题登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3D8BF7 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 80rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 12rpx 32rpx rgba(96, 165, 250, 0.45);
}

/* 点击效果 */
.login-btn:active {
  background: linear-gradient(135deg, #4C94F8 0%, #2563EB 100%);
  transform: scale(0.98);
  box-shadow: 0 5rpx 24rpx rgba(59, 130, 246, 0.45);
}

/* 加载状态 - 灰色 */
.login-btn.loading {
  background: #cccccc;
  opacity: 0.8;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.2);
}

/* 底部弹窗 */
.picker-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 40rpx 30rpx;
  z-index: 99;
}

.picker-modal {
  width: 100%;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.25s ease-out;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.picker-title {
  font-size: 32rpx;
  color: #333;
}

.picker-action {
  font-size: 30rpx;
  color: #999;
}

.picker-action.confirm {
  color: #60A5FA;
  font-weight: 600;
}

.picker-view {
  height: 360rpx;
}

.picker-item {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

@keyframes slideUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}