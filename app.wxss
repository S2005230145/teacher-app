/**app.wxss**/
:root {
  --color-primary: #60A5FA;
  --color-primary-dark: #3D8BF7;
  --color-primary-light: #E0F2FF;
  --color-text-main: #1F2E4A;
  --color-text-sub: #4B5563;
  --color-surface: #FFFFFF;
  --shadow-soft: 0 12rpx 40rpx rgba(96, 165, 250, 0.18);
}

page {
  background: #f4f9ff;
  color: var(--color-text-main);
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, rgba(96,165,250,0.15) 0%, rgba(255,255,255,0) 45%);
  padding: 30rpx;
  box-sizing: border-box;
}

.theme-card {
  background: var(--color-surface);
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-soft);
  border: 2rpx solid rgba(96,165,250,0.12);
}

.theme-section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-main);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.theme-pill {
  padding: 6rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(96,165,250,0.12);
  color: var(--color-primary);
  font-size: 24rpx;
}

.btn-primary {
  background: linear-gradient(120deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-weight: 600;
  box-shadow: 0 18rpx 28rpx rgba(96,165,250,0.35);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.tag-outlined {
  border: 2rpx solid rgba(96,165,250,0.5);
  border-radius: 12rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: var(--color-primary);
  background: rgba(255,255,255,0.9);
}

.floating-badge {
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(31,64,104,0.08);
  border: 1rpx solid rgba(96,165,250,0.2);
}

.campus-wave {
  position: relative;
  overflow: hidden;
  border-radius: 30rpx;
}

.campus-wave::after {
  content: '';
  position: absolute;
  inset: -40rpx;
  background: radial-gradient(circle at 20% 20%, rgba(255,255,255,0.45), transparent 55%),
              radial-gradient(circle at 80% 0%, rgba(96,165,250,0.35), transparent 40%),
              linear-gradient(135deg, rgba(96,165,250,0.35), rgba(61,139,247,0.35));
  z-index: -1;
}

